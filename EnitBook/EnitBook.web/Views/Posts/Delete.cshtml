@model EnitBook.BL.Entities.Post

@{
    ViewData["Title"] = "Delete";
}

<style>
    h1, h3 {
        text-align: center;
    }

    .confirmation-container {
        margin: 20px;
    }

    .row {
        margin-top: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        margin-bottom: 10px;
    }

    .btn-danger {
        margin-right: 10px;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        h1{
            color: blue;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="confirmation-container">
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishedDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="/Profils/Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
